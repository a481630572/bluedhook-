<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_read_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已读不回"
        android:layout_marginStart="5dp"
        android:textColor="#FFFFFF"
        tools:background="@drawable/bg_orange"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_recall_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="防撤回"
        android:textColor="#FFFFFF"
        tools:background="@drawable/bg_gradient_orange"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_screenshot_protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="私信截图"
        android:textColor="#FFFFFF"
        tools:background="@drawable/bg_rounded"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textSize="11sp" />
</LinearLayout>