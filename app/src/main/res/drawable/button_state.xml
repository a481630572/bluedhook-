<!-- button_bg_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#4000F9FF" /> <!-- 半透明蓝 -->
            <stroke android:width="1dp" android:color="#00F9FF" /> <!-- 霓虹边框 -->
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#1A2B3F" /> <!-- 深蓝背景 -->
            <stroke android:width="1dp" android:color="#334D66" /> <!-- 暗色边框 -->
        </shape>
    </item>
</selector>